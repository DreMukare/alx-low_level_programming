.PHONY : all clean oclean fclean re
CC=gcc
SRC=main.c holberton.c
OBJ=$(SRC:%.c=%.o)
NAME=holberton
RM=rm -f

%.o : %.c m.h
	$(CC) -c -o $@ $<

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	$(RM) $(wildcard *~)

oclean :
	$(RM) $(wildcard *.o)

fclean :
	$(RM) $(wildcard *~) $(wildcard *.o) $(NAME)	

re : oclean all
